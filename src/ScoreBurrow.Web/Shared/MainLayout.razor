@inherits LayoutComponentBase

<PageTitle>ScoreBurrow.Web</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <span class="me-3">Welcome, @context.User.Identity?.Name</span>
                    <a href="/Account/Logout">Logout</a>
                </Authorized>
                <NotAuthorized>
                    <a href="/Account/Login" class="me-2">Login</a>
                    <a href="/Account/Register">Register</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
